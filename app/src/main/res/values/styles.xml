<resources>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">
        <item name="ate_key">light_theme</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ate_key">light_theme</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeDark.ActionBar" parent="Theme.AppCompat">
        <item name="ate_key">dark_theme</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="ate_key">dark_theme</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardText" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CellText" parent="@android:style/TextAppearance.Large">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="DescriptionStartButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DescriptionStartText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DescriptionOption">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DescriptionOptionText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
